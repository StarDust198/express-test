    </head>

    <body>
        <%- include('../includes/navigation.ejs') %>
        <main>
                <ul class="cart__item-list">
                    <% products.forEach((p => { %>
                        <li class="cart__item">
                            <h2><%= p.productId.title %></h2> <p>Quantity: <%= p.quantity %></p>
                        </li>
                    <% })) %>
                </ul>
								<div>
									<h2 class="centered">Total: $<%= totalSum %></h2>
								</div>
